<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div>
        <% if(user===undefined){ %>
          <form class="form-inline" action="/login" method="POST">
            <span>
              <a href="/login" style="color:white; margin: 1em; padding: 0.1em 0.5em; border-width: 1em;">Login</a>  </span>
               <div style="color: lightgray; margin: 1em; padding: 0.1em 0.5em; border-width: 1em;">or</div> 
              <span><a href="/register" style="color:white; margin: 1em; padding: 0.1em 0.5em; border-width: 1em;"> Register</a> </span>
           
          </form>
        <% } else{ %>
          <div>
            Logged in as: <%= user.email %>
          </div>
          <form class="form-inline" method="POST" action="/logout/">
            <button type="submit">Logout</button>
          </form>
        <% } %>
      </div>
  </nav>
</header>